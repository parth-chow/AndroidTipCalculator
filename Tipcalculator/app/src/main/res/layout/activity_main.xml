<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.parth.tipcalculator.MainActivity"
    android:background="@android:color/background_light"
    tools:background="@android:color/background_light">

    <TextView
        android:text="TAX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/Tax"
        android:layout_below="@+id/bill_editText"
        android:layout_alignStart="@+id/bill_editText"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="TIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/Tax"
        android:layout_alignStart="@+id/Tax" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="10% of Bill"
        android:id="@+id/Tax_textView7"
        android:layout_alignBaseline="@+id/Tax"
        android:layout_alignBottom="@+id/Tax"
        android:layout_alignEnd="@+id/bill_editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tip_textView9"
        android:layout_marginStart="24dp"
        android:layout_above="@+id/tip_seekBar2"
        android:layout_toEndOf="@+id/tippercentage_textView3" />

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalBill_textView2"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/tip_seekBar2" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/tip_seekBar2"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/bill_editText"
        android:layout_alignEnd="@+id/Tax_textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/tippercentage_textView3"
        android:layout_below="@+id/tip_seekBar2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Total Bill"
        android:textColorHighlight="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tip_seekBar2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/bill_editText"
        android:hint="           Insert bill here"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
